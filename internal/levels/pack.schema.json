{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CLI Dojo PackSpec v1",
  "type": "object",
  "required": ["kind", "schema_version", "pack_id", "name", "version", "image"],
  "properties": {
    "kind": { "const": "pack" },
    "schema_version": { "type": "integer", "const": 1 },
    "pack_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9_-]{2,63}$" },
    "name": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "description_md": { "type": "string" },
    "image": {
      "type": "object",
      "required": ["ref"],
      "properties": {
        "ref": { "type": "string", "minLength": 1 },
        "build": {
          "type": "object",
          "required": ["context_dir"],
          "properties": {
            "context_dir": { "type": "string", "minLength": 1 },
            "dockerfile": { "type": "string" },
            "target": { "type": "string" },
            "args": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            }
          },
          "additionalProperties": false
        },
        "pull": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "defaults": {
      "type": "object",
      "properties": {
        "shell": {
          "type": "object",
          "properties": {
            "program": { "type": "string" },
            "args": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": true
        },
        "sandbox": {
          "type": "object",
          "properties": {
            "network": { "enum": ["none", "inherit"] },
            "read_only_root": { "type": "boolean" },
            "cpu": { "type": "number", "exclusiveMinimum": 0 },
            "memory_mb": { "type": "integer", "minimum": 1 },
            "pids_limit": { "type": "integer", "minimum": 1 },
            "tmpfs": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["mount", "options"],
                "properties": {
                  "mount": { "type": "string" },
                  "options": { "type": "string" }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": true
        },
        "ui": {
          "type": "object",
          "properties": {
            "hud_width": { "type": "integer", "minimum": 1 },
            "min_cols": { "type": "integer", "minimum": 1 },
            "min_rows": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["tool_id", "name"],
        "properties": {
          "tool_id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "summary_md": { "type": "string" },
          "difficulty_bias": { "type": "integer", "minimum": 1, "maximum": 5 }
        },
        "additionalProperties": true
      }
    },
    "levels": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["level_id", "path"],
        "properties": {
          "level_id": { "type": "string", "pattern": "^[a-z0-9][a-z0-9_-]{2,63}$" },
          "path": { "type": "string", "minLength": 1 },
          "enabled": { "type": "boolean" }
        },
        "additionalProperties": true
      }
    },
    "extensions": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
