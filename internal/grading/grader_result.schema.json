{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CLI Dojo GraderResult v1",
  "type": "object",
  "required": ["kind", "schema_version", "passed", "checks", "score", "run", "pack_id", "pack_version", "level_id"],
  "properties": {
    "kind": { "const": "grader_result" },
    "schema_version": { "type": "integer", "const": 1 },

    "app_version": { "type": "string" },
    "pack_id": { "type": "string" },
    "pack_version": { "type": "string" },
    "level_id": { "type": "string" },

    "run": {
      "type": "object",
      "required": ["run_id", "attempt", "started_at_unix_ms", "finished_at_unix_ms", "duration_ms"],
      "properties": {
        "run_id": { "type": "string" },
        "attempt": { "type": "integer", "minimum": 1 },
        "started_at_unix_ms": { "type": "integer" },
        "finished_at_unix_ms": { "type": "integer" },
        "duration_ms": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },

    "passed": { "type": "boolean" },

    "score": {
      "type": "object",
      "required": ["base_points", "total_points"],
      "properties": {
        "base_points": { "type": "integer" },
        "time_grace_seconds": { "type": "integer" },
        "time_penalty_points": { "type": "integer" },
        "hint_penalty_points": { "type": "integer" },
        "reset_penalty_points": { "type": "integer" },
        "optional_bonus_points": { "type": "integer" },
        "total_points": { "type": "integer" },
        "breakdown": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["kind", "points", "description"],
            "properties": {
              "kind": { "type": "string" },
              "points": { "type": "integer" },
              "description": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },

    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "required", "passed"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string" },
          "required": { "type": "boolean" },
          "passed": { "type": "boolean" },
          "points_awarded": { "type": "integer" },
          "summary": { "type": "string" },
          "message": { "type": "string" },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["kind", "ref"],
              "properties": {
                "kind": { "type": "string" },
                "ref": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": true
      }
    },

    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ref", "kind"],
        "properties": {
          "ref": { "type": "string" },
          "kind": { "type": "string" },
          "title": { "type": "string" },
          "text_preview": { "type": "string" }
        },
        "additionalProperties": true
      }
    },

    "cmdlog_analysis": {
      "type": "object",
      "properties": {
        "cmd_count": { "type": "integer" },
        "matched_patterns": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["pattern_id", "count"],
            "properties": {
              "pattern_id": { "type": "string" },
              "count": { "type": "integer" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": true
    },

    "engine_debug": {
      "type": "object",
      "properties": {
        "engine": { "type": "string" },
        "container_name": { "type": "string" },
        "image_ref": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
